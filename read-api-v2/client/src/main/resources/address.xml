<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="address.attributeStore" class="net.cpollet.read.v2.impl.attribute.DirectAttributeStore">
        <constructor-arg name="attributes">
            <list>
                <bean class="net.cpollet.read.v2.api.attribute.AttributeDef">
                    <constructor-arg name="name" value="street"/>
                    <constructor-arg name="deprecated" value="false"/>
                    <constructor-arg name="filtered" value="false"/>
                    <constructor-arg name="method" ref="address.method.standard"/>
                    <constructor-arg name="modes">
                        <set>
                            <value>READ</value>
                        </set>
                    </constructor-arg>
                    <constructor-arg name="converter" ref="address.converter.default"/>
                    <constructor-arg name="caster" ref="address.caster.default"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>

    <bean id="address.executor" class="net.cpollet.read.v2.impl.execution.DefaultExecutor">
        <constructor-arg name="attributeStore" ref="address.attributeStore"/>
        <constructor-arg name="idValidator">
            <bean class="net.cpollet.read.v2.impl.domain.CachedIdValidator">
                <constructor-arg name="nested">
                    <bean class="net.cpollet.read.v2.client.domain.DefaultIdValidator"/>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg name="configuration">
            <bean class="net.cpollet.read.v2.impl.execution.DefaultExecutor.Configuration">
                <constructor-arg name="haltOnAttributeConversionError" value="false"/>
                <constructor-arg name="haltOnIdValidationError" value="false"/>
                <constructor-arg name="haltOnInputValueConversionError" value="false"/>
                <constructor-arg name="haltOnUpdateError" value="false"/>
                <constructor-arg name="haltOnModeError" value="false"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="address.method.standard" class="net.cpollet.read.v2.impl.methods.StandardMethod"/>

    <bean id="address.converter.default" class="net.cpollet.read.v2.client.conversion.DefaultValueConverter"/>
    <bean id="address.caster.default" class="net.cpollet.read.v2.client.conversion.DefaultValueCaster"/>
</beans>
