<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person.attributeStore" class="net.cpollet.read.v2.impl.attribute.NestedAttributeStore">
        <constructor-arg name="parentStore">
            <bean class="net.cpollet.read.v2.impl.attribute.DirectAttributeStore">
                <constructor-arg name="attributes">
                    <list>
                        <bean class="net.cpollet.read.v2.api.attribute.AttributeDef">
                            <constructor-arg name="name" value="email"/>
                            <constructor-arg name="deprecated" value="false"/>
                            <constructor-arg name="filtered" value="true"/>
                            <constructor-arg name="method" ref="person.method.standard"/>
                            <constructor-arg name="modes">
                                <set>
                                    <value>READ</value>
                                </set>
                            </constructor-arg>
                            <constructor-arg name="converter" ref="person.converter.default"/>
                            <constructor-arg name="caster" ref="person.caster.default"/>
                        </bean>
                        <bean class="net.cpollet.read.v2.api.attribute.AttributeDef">
                            <constructor-arg name="name" value="addressId"/>
                            <constructor-arg name="deprecated" value="false"/>
                            <constructor-arg name="filtered" value="true"/>
                            <constructor-arg name="method">
                                <bean class="net.cpollet.read.v2.client.methods.AddressIdMethod"/>
                            </constructor-arg>
                            <constructor-arg name="modes">
                                <set>
                                    <value>READ</value>
                                </set>
                            </constructor-arg>
                            <constructor-arg name="converter" ref="person.converter.default"/>
                            <constructor-arg name="caster" ref="person.caster.default"/>
                        </bean>
                        <bean class="net.cpollet.read.v2.api.attribute.AttributeDef">
                            <constructor-arg name="name" value="portfolioId"/>
                            <constructor-arg name="deprecated" value="false"/>
                            <constructor-arg name="filtered" value="false"/>
                            <constructor-arg name="method">
                                <bean class="net.cpollet.read.v2.client.methods.OwnedPortfolioIdMethod"/>
                            </constructor-arg>
                            <constructor-arg name="modes">
                                <set>
                                    <value>READ</value>
                                </set>
                            </constructor-arg>
                            <constructor-arg name="converter" ref="person.converter.default"/>
                            <constructor-arg name="caster" ref="person.caster.default"/>
                        </bean>
                    </list>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg name="attributes">
            <list>
                <bean class="net.cpollet.read.v2.impl.attribute.NestedAttributeStore.NestedAttributes">
                    <constructor-arg name="prefix" value="address"/>
                    <constructor-arg name="attribute" value="addressId"/>
                    <constructor-arg name="executor" ref="address.executor"/>
                    <constructor-arg name="idProvider">
                        <bean class="net.cpollet.read.v2.client.domain.AddressIdToAddressId"/>
                    </constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>

    <bean id="person.executor" class="net.cpollet.read.v2.impl.execution.DefaultExecutor">
        <constructor-arg name="attributeStore" ref="person.attributeStore"/>
        <constructor-arg name="idValidator">
            <bean class="net.cpollet.read.v2.impl.domain.CachedIdValidator">
                <constructor-arg name="nested">
                    <bean class="net.cpollet.read.v2.client.domain.DefaultIdValidator"/>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg name="configuration">
            <bean class="net.cpollet.read.v2.impl.execution.DefaultExecutor.Configuration">
                <constructor-arg name="haltOnAttributeConversionError" value="false"/>
                <constructor-arg name="haltOnIdValidationError" value="false"/>
                <constructor-arg name="haltOnInputValueConversionError" value="false"/>
                <constructor-arg name="haltOnUpdateError" value="false"/>
                <constructor-arg name="haltOnModeError" value="false"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="person.method.standard" class="net.cpollet.read.v2.impl.methods.StandardMethod"/>

    <bean id="person.converter.default" class="net.cpollet.read.v2.client.conversion.DefaultValueConverter"/>
    <bean id="person.caster.default" class="net.cpollet.read.v2.client.conversion.DefaultValueCaster"/>
</beans>
